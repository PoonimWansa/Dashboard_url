<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="~/assets/images/favicon.ico">
    @*<title>@ViewBag.Title - My ASP.NET Application</title>*@
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style type="text/css">
        #navcolor {
            background-color: #0099FF;
            background-image: linear-gradient(to bottom right, #0099FF, #00CCFF);
        }

        .navbar-default .navbar-fnt {
            color: #FFFFFF;
        }

        #footer {
            position: absolute;
            bottom: 0;
            width: 100%;
            height: 60px;
            background: #3399CC;
        }

        .page-footer {
            padding-top: 40px;
            padding-bottom: 10px;
        }


        .body {
            height: 100%;
            width: 100%;
            overflow: hidden;
            padding: 0;
            margin: 0;
            font-family: monospace;
            font-size: 25px;
            background: #F5FFFA;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-md navbar-fnt navbar-fixed-top glyphicon-text-size" id="navcolor">
        <div class="container">
             <p style="font-family: monospace;font-size: 45px;text-align: center;color: azure"><img scr="/Pi"> Check Status FQC And EWM</p>
        </div>
    </nav>

    <div class="body">
        @RenderBody()
    </div>

    <div id="footer">
            <footer class="page-footer mt-auto" id="navcolor">
            </footer>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
